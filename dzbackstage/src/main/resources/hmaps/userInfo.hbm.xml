<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dzbackstage.model">
    <class name="UserInfo" table="account">
        <id name="id" column="id">
            <generator class="native"/>     <!-- 字段自增 -->
        </id>
        <property name="userName" column="u_name" not-null="true"/>
        <property name="password" column="u_pwd" not-null="true"/>
        <property name="email" column="u_email"/>
        <property name="regTime" type="timestamp" column="u_reg_time" not-null="true"/>
    </class>
</hibernate-mapping>