<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
        <constant name="struts.devMode" value="true"/>
        <package name="dzbackstage" extends="struts-default">
                <interceptors>
                        <interceptor name="authentication" class="com.dzbackstage.interceptor.DZAuthenticationInterceptor"></interceptor>
                </interceptors>

                <!-- 定义全局的result -->
                <global-results>
                    <result name="login">/login.jsp</result>
                </global-results>

                <action name="login" class="com.dzbackstage.controller.user.BKLogin">
                        <result name="success">/index.jsp</result>
                </action>

                <action name="index" class="com.dzbackstage.controller.BKIndex" method="execute">
                        <!-- 使用拦截器 -->
                        <interceptor-ref name="authentication"/>
                        <result name="success">/index.jsp</result>
                </action>

        </package>
</struts>